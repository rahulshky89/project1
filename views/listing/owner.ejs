          <h1>
           Add your property
        </h1>
 
     
       <form action="/add-property" method="POST">

  <!-- Owner -->
  <label>Owner Name</label>
  <input type="text" name="owner" required>

  <!-- Title -->
  <label>Title</label>
  <input type="text" name="title" required>

  <!-- Type -->
  <label>Type</label>
  <select name="type" required>
    <option value="PG">PG</option>
    <option value="Hostel">Hostel</option>
    <option value="Room">Room</option>
    <option value="Flat">Flat</option>
  </select>

  <!-- Location -->
  <label>Location</label>
  <input type="text" name="location" required>

  <!-- Description -->
  <label>Description</label>
  <textarea name="description"></textarea>

  <!-- Price -->
  <label>Monthly Rent (â‚¹)</label>
  <input type="number" name="price" required>

  <!-- Guests Allowed -->
  <label>Guests Allowed</label>
  <input type="number" name="guestsAllowed" required>

  <!-- Amenities -->
  <label>Amenities (comma separated)</label>
  <input type="text" name="amenities" placeholder="Gym,WiFi,Laundry">

  <!-- Images (comma separated URLs) -->
  <label>Image URLs (comma separated)</label>
  <input type="text" name="images" placeholder="https://img1.jpg, https://img2.png">

  <!-- Available -->
  <label>
    <input type="checkbox" name="available" checked>
    Available
  </label>

  <button type="submit">Add Property</button>
</form>



    <%- include("../includes/navbar.ejs") %>
      <div class="container my-5">
  <h2 class="text-center mb-4 fw-bold" style="color:#1e293b;"><i class="fa-solid fa-house-chimney"></i> Explore Available Properties</h2>
  <div class="row g-4">

    <% for(let i = 0; i < properties.length; i++) { %>
      <% let p = properties[i]; %>

      <div class="col-md-4">
        <div class="property-card">

          <!-- ✅ Image Section -->
          <div class="property-image">
            <img 
              src="<%= p.images && p.images.length > 0 ? p.images[0] : 'https://via.placeholder.com/350x200?text=No+Image' %>"
              alt="<%= p.title %>">
          </div>

          <!-- ✅ Content Section -->
          <div class="property-details">
            <h5 class="property-title"><%= p.title %></h5>

            <p class="property-owner">
              <i class="fa-solid fa-user-secret"></i> <strong>Owner:</strong> <%= p.owner %>
            </p>

            <p class="property-location">
              <i class="fa-solid fa-location-dot"></i> <%= p.location %>
            </p>

            <p class="property-price">
              <i class="fa-solid fa-money-bill-1-wave"></i> ₹<%= p.price %> / month
            </p>

            <p class="property-amenities">
              <strong>Amenities:</strong> 
              <%= p.amenities.join(", ") %>
            </p>

            <a href="/list/<%= p._id %>" class="view-btn">See Full Details</a>
          </div>

        </div>
      </div>
    <% } %>

  </div>
</div>




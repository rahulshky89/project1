    <%- include("../includes/navbar.ejs") %>
       <div class="container mt-4">
  <div class="row">

    <% for(let i = 0; i < properties.length; i++) { %>
       <%  let p = properties[i]; %>

      <div class="col-md-4 mb-4">
        <div class="card shadow-sm" style="width: 100%;">

          <!-- Image -->
          <img 
            src="<%= p.images && p.images.length > 0 ? p.images[0] : 'https://via.placeholder.com/350x200?text=No+Image' %>"
            class="card-img-top" 
            alt="<%= p.title %>"
          >

          <div class="card-body">

            <h5 class="card-title"><%= p.title %></h5>

            <!-- ✅ Owner Name Added -->
            <p class="text-primary mb-1">
              <strong>Owner:</strong> <%= p.owner %>
            </p>

            <p class="text-muted mb-1">
              <strong>Location:</strong> <%= p.location %>
            </p>

            <p class="text-success fw-bold mb-2">
              ₹<%= p.price %> / month
            </p>

            <!-- Amenities -->
            <p class="small mb-2">
              <strong>Amenities:</strong>
              <%= p.amenities.join(", ") %>
            </p>
            
            <!-- Details Button -->
            <a href="/list/<%= p._id %>" class="btn btn-primary btn-sm">
              See Full Details
            </a>

          </div>
        </div>
      </div>

    <% } %>

  </div>
</div>


